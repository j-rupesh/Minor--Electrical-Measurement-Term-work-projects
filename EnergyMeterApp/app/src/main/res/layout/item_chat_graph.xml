<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/tvSenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RT AI Assistant (Chart)"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimaryDark"
        android:layout_marginStart="8dp" />

    <!-- Placeholder for a Chart or Graph View -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:id="@+id/chartContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:background="@color/cardBackgroundColor">

            <!-- Mock Chart/Graph Content -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Placeholder for Energy Analysis Graph]"
                android:textColor="?attr/colorSecondary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_file_tag"
                android:backgroundTint="@color/dividerColor"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="10:30 AM"
        android:textSize="10sp"
        android:textColor="@color/textColorSecondary"
        android:layout_gravity="start"
        android:layout_marginStart="4dp"/>
</LinearLayout>
